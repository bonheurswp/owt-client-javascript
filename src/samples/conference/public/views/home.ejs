<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		
		<title>Home page</title>
		<style>
			.setting {
				float: right
			}
		</style>
	</head>
	<body>	
		<!-- The Modal -->
		<div class="modal fade" id="myModal">
			<div class="modal-dialog">
				<div class="modal-content">
				
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Modal Heading</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					
					<!-- Modal body -->
					<div class="modal-body">
							<div class="form-group">
								<label for="audioInputSelect">Microphones:</label>
								<select class="form-control" id="audioInputSelect">
									<option>1</option>
									<option>2</option>
									<option>3</option>
									<option>4</option>
								</select>
							</div>
							<div class="form-group">
								<label for="audioOutputSelect">Speakers:</label>
								<select class="form-control" id="audioOutputSelect">
									<option>1</option>
									<option>2</option>
									<option>3</option>
									<option>4</option>
								</select>
							</div>
							<div class="form-group">
								<label for="videoInputSelect">Cameras:</label>
								<select class="form-control" id="videoInputSelect">
									<option>1</option>
									<option>2</option>
									<option>3</option>
									<option>4</option>
								</select>
							</div>
					</div>
					
					<!-- Modal footer -->
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary" id="saveDeviceSettings">Save</button>
							<button type="button" class="btn btn-danger" id="clearDeviceSettings">Clear</button>
					</div>
					
				</div>
			</div>
		</div>		
		<div class="header">
			<div class="menu"></div>
			<div class="setting">
				<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Settings</button>
			</div>
		</div>
		<div class="main">
			<h1>Home Page</h1>
			<ul>
        <% for(var i=0; i<rooms.length; i++) {%>
						<% if (rooms[i].views.length === 0) { %>
							 <li><a href="/room?room=<%= rooms[i]._id %>&forward=true"><%= rooms[i].name %></a></li>
						<% } else{ %>
							<li><a href="/room?room=<%= rooms[i]._id %>"><%= rooms[i].name %></a></li>
						<% } %>	 
        <% } %>
        </ul>
		</div>
		<div class="footer"></div>
		<!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
		<script src="../../../../dist/sdk-debug/owt.js" type="text/javascript"></script>
    <script src="../scripts/home.js" type="text/javascript"></script>
	</body>
</html>